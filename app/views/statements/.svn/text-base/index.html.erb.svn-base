<h1>Listing statements</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Predicate</th>
    <th>Object</th>
    <th>Context</th>
    <th>User</th>
    <th>Modifier</th>
  </tr>

<% @statements.each do |statement| %>
  <tr>
    <td><%=h statement.subject %></td>
    <td><%=h statement.predicate %></td>
    <td><%=h statement.object %></td>
    <td><%=h statement.context_id %></td>
    <td><%=h statement.user_id %></td>
    <td><%=h statement.modifier %></td>
    <td><%= link_to 'Show', statement %></td>
    <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
    <td><%= link_to 'Destroy', statement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New statement', new_statement_path %>